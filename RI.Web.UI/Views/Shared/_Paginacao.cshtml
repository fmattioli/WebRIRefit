<ul class="pagination">
    @for (int i = 1; i <= ViewBag.TotalLinhas; i++)
    {
        if (ViewBag.Pagina == i)
        {
            <li class="active carmesim"><a asp-action="GerenciarLivro" asp-controller="Livro" , asp-route-Pagina="1">@i</a></li>
        }
        else
        {
            <li class="waves-effect"><a asp-action="GerenciarLivro" asp-controller="Livro" , asp-route-Pagina="@i">@i</a></li>
        }
    }
</ul>